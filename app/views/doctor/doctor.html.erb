        error: function(xhr, status, error) {
          console.error('Wystpi bd podczas aktualizacji wizyty:', error);
          alert('Wystpi bd podczas aktualizacji wizyty. Spr贸buj ponownie.');
        }
      });
    });
  });
</script>

