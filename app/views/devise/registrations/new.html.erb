<style>
.centered-form {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh; 
}
</style>

<div class="cont_sing_up">
<div class="centered-form">
  <div>
    <h1>Zarejestruj się</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-floating mb-3" style="margin-top: 10px; margin-bottom: 10px;">
      <%= f.text_field :first_name, autofocus: true, required: true, class: "form-control", id: "floatingInput" %>
      <%= f.label :first_name, "Imię", for: "floatingInput" %>
    </div>

     <div class="form-floating mb-3" style="margin-top: 10px; margin-bottom: 10px;">
      <%= f.text_field :last_name, required: true, class: "form-control", id: "floatingInput" %>
      <%= f.label :last_name, "Nawisko", for: "floatingInput" %>
    </div>

    <div class="form-floating mb-3" style="margin-top: 10px; margin-bottom: 10px;">
      <%= f.text_field :pesel_number, required: true, class: "form-control", id: "floatingInput" %>
      <%= f.label :pesel_number, "Numer PESEL", for: "floatingInput" %>
    </div>

    <div class="form-floating mb-3" style="margin-top: 10px; margin-bottom: 10px;">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "form-control", id: "floatingInput" %>
      <%= f.label :email, "Adres e-mail", for: "floatingInput" %>
    </div>

    <div class="form-floating mb-3" style="margin-top: 10px; margin-bottom: 10px;">
      <%= f.password_field :password, autocomplete: "new-password", required: true, class: "form-control", id: "floatingInput" %>
      <%= f.label :password, "Hasło", for: "floatingInput" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> znaków minimum)</em>
      <% end %><br />
    </div>

    <div class="form-floating mb-3" style="margin-top: 10px; margin-bottom: 10px;">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, class: "form-control", id: "floatingInput" %>
      <%= f.label :password_confirmation, "Powtórz hasło", for: "floatingInput" %>
    </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, "Zapamiętaj mnie", class: "form-check-label" %>
        </div>
      <% end %>

      <center><div class="actions" style="margin-top: 30px; margin-bottom: 20px;">
      <%= f.submit "Zarejestruj się", class: "btn btn-primary btn-lg", data: {turbo: false}, style:"color:white; text-decoration: none;" %>
      </div></center>
    
    <% end %>

    <%= render "devise/shared/links" %> 
  </div>
</div>
</div>


