<h2>Zarejestruj się</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :first_name, "Imię" %><br />
    <%= f.text_field :first_name, autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :last_name, "Nazwisko" %><br />
    <%= f.text_field :last_name, required: true %>
  </div>

  <div class="field">
    <%= f.label :pesel_number, "Numer pesel" %><br />
    <%= f.text_field :pesel_number, required: true %>
  </div>

  <div class="field">
    <%= f.label :email, "Adres e-mail" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

  <div class="field">
    <%= f.label :password, "Hasło" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Powtórz hasło" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", data: {turbo: false} %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
