<style>
.cont_sing_up {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f0f4f8;
}

.centered-form {
  background: #ffffff;
  padding: 2rem;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 400px;
  text-align: center;
}

.centered-form h2 {
  color: #007bff;
}

.centered-form .form-floating {
  margin-top: 10px;
  margin-bottom: 10px;
}

.centered-form .form-floating label {
  color: #007bff;
}

.centered-form .form-floating input {
  width: 100%;
  padding: 0.5rem;
  margin-bottom: 1rem;
  border: 1px solid #007bff;
  border-radius: 5px;
}

.centered-form .actions input[type="submit"] {
  background-color: #007bff;
  color: white;
  padding: 0.5rem 1rem;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  width: 100%;
}

.centered-form .actions input[type="submit"]:hover {
  background-color: #0056b3;
}

.footer {
  text-align: center;
  margin-top: 20px;
  color: #666;
}

</style>

<div class="cont_sing_up">
  <div class="centered-form">
    <div>
      <h2>Zmień hasło</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-floating mb-3" style="margin-top: 10px; margin-bottom: 10px;">
          <%= f.password_field :password, autofocus: true, required: true, class: "form-control", id: "floatingPassword" %>
          <%= f.label :password, "Nowe hasło", for: "floatingPassword" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> znaków minimum)</em>
          <% end %>
        </div>

        <div class="form-floating mb-3" style="margin-top: 10px; margin-bottom: 10px;">
          <%= f.password_field :password_confirmation, required: true, class: "form-control", id: "floatingPasswordConfirmation" %>
          <%= f.label :password_confirmation, "Powtórz hasło", for: "floatingPasswordConfirmation" %>
        </div>

        <center>
          <div class="actions" style="margin-top: 30px; margin-bottom: 20px;">
            <%= f.submit "Zmień hasło", class: "btn btn-primary btn-lg", data: {turbo: false}, style:"color:white; text-decoration: none;" %>
          </div>
        </center>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<footer class="footer">
  <p><b>Copyright © 2024 </b>DoctorSeeker. Wszelkie prawa zastrzeżone.</p>
</footer>
